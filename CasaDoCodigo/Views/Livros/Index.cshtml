@model IEnumerable<CasaDoCodigo.Models.Livro>

@{
    ViewData["Title"] = "Index";
}

<h1>Livros</h1>

<p>
    <a class="btn btn-danger" asp-action="Create">Novo Livro</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Titulo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Imagem)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Preco)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumeroPagina)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Isbn)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Titulo)
            </td>
            <td>
                <img class="img-autor" src="@Html.DisplayFor(modelItem => item.Imagem)" alt="Alternate Text" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Preco)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumeroPagina)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Isbn)
            </td>
            <td>
                <a class="btn btn-info" asp-action="Edit" asp-route-id="@item.Id">Editar</a> 
                <a class="btn btn-success" asp-action="Details" asp-route-id="@item.Id">Detalhes</a> 
                <a class="btn btn-dark" asp-action="Delete" asp-route-id="@item.Id ">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
