@model CarrinhoViewModel

<div class="row checkoutForm">
    <h2>Carrinho de Compra</h2>
    <h4>Pedidos</h4>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Quantidade</th>
                <th>Livro</th>
                <th class="text-right">Preço</th>
                <th class="text-right">Subtotal</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var line in Model.Carrinho.CarrinhoItens)
            {
                <tr>
                    <td class="text-center">@line.Quantidade</td>
                    <td class="text-left">@line.Livro.Titulo</td>
                    <td class="text-right">@line.Livro.Preco.ToString("c")</td>
                    <td class="text-right">
                        @((line.Quantidade * line.Livro.Preco).ToString("c"))
                    </td>
                    <td class="text-center"><a class="glyphicon glyphicon-remove text-danger remove" asp-controller="Carrinho" asp-action="RemoverItemDoCarrinho" asp-route-drinkId="@line.Livro.Id"></a></td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="3" class="text-right">Total:</td>
                <td class="text-right">
                    @Model.CarrinhoTotal.ToString("c")
                </td>
            </tr>
        </tfoot>
    </table>

    <div class="text-right">
        <div class="btn-group ">
            <a class="btn btn-success" asp-controller="Pedido" asp-action="Checkout">Encerrar pedido</a>
        </div>
    </div>
</div>